#!/bin/sh

# Tools
DOCKER="docker"
RM="rm"
RMFLAGS="-fr"
PRINT="printf"

"$PRINT" "################################################################################\n"
"$PRINT" "#                           Un-Bootstrap RADStack                              #\n"
"$PRINT" "################################################################################\n"

"$PRINT" "\n# Stopping Docker Containers\n\n"
"${DOCKER}" stop mywww myci myscm myldap myldapadmin 

"$PRINT" "\n# Removing Docker Containers/DataVolumes\n\n"
"${DOCKER}" rm mywww myci myscm myldap myldapadmin \
               ci-dv scm-dv www-dv wwwconf-dv \
               ldapdb-dv ldapconf-dv ldapadmin-dv

"$PRINT" "\n# Removing Docker Images\n\n"
"${DOCKER}" rmi nginx jenkins gerritcodereview/gerrit osixia/openldap \
            osixia/phpldapadmin busybox centurylink/openssl

"$PRINT" "\n# Removing Docker Networks\n\n"
"${DOCKER}" network rm mynetwork


"$PRINT" "\n################################################################################\n"
"$PRINT" "#                Un-Bootstrap RADStack Completed Successfully                  #\n"
"$PRINT" "################################################################################\n"
